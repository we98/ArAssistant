<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsualProblemActivity">

    <TextView
        android:id="@+id/titleOfUsualProblemActivity"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="飞利浦HD7751/00咖啡机"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"/>

    <ExpandableListView
        android:id="@+id/usualProblemList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titleOfUsualProblemActivity"
        android:layout_marginTop="10dp"
        android:groupIndicator="@drawable/group_indicator_activity_usualproblems">

    </ExpandableListView>

</android.support.constraint.ConstraintLayout>