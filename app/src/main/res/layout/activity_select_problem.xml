<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectProblemActivity">

    <TextView
        android:id="@+id/titleOfSelectProblemActivity"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="飞利浦HD7751/00咖啡机"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/usualProblems"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="常见问题"
        android:textColor="@color/white"
        android:background="#8BC34A"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleOfSelectProblemActivity"
        app:layout_constraintWidth_percent="0.2"/>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/coffee_machine"
        app:layout_constraintTop_toBottomOf="@id/usualProblems"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.5"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="输入你的问题"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintWidth_percent="0.8"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:src="@drawable/send_voice"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintWidth_percent="0.1"/>


</android.support.constraint.ConstraintLayout>